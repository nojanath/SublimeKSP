[
	{

		"id": "tools",
		"children":
		[
			{
				"id": "end",
			},
			{
				"caption": "SublimeKSP",
				"mnemonic": "S",
				"children":
				[
					{
						"command": "compile_ksp",
						"context":
						[{
							"key": "selector",
							"operator": "equal",
							"operand": "source.sksp"
						}],
						"caption": "Compile",
						"mnemonic": "C",
						"id": "compile"
					},
					{
						"command": "compile_all_open_ksp",
						"context":
						[{
							"key": "selector",
							"operator": "equal",
							"operand": "source.sksp"
						}],
						"caption": "Compile All Open Scripts With Defined Output Path",
						"mnemonic": "p",
						"id": "compile_all_open"
					},
					{
						"command": "recompile_ksp",
						"context":
						[{
							"key": "selector",
							"operator": "equal",
							"operand": "source.sksp"
						}],
						"caption": "Recompile Last Script",
						"mnemonic": "L",
						"id": "recompile"
					},
					{
						"command": "ksp_uncompress_code",
						"args": {},
						"caption": "Uncompress Selected Compiled Code",
						"mnemonic": "U",
						"id": "uncompress"
					},

					{"caption": "-"}, //separator

					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_play_sound", "default": false},
						"caption": "Play Sound When Compilation Finishes",
						"mnemonic": "S",
						"id": "play_sound",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_write_log_on_fail", "default": false},
						"caption": "Write Log on Failed Compilation",
						"mnemonic": "W",
						"id": "fail_log",
						"checkbox": true
					},

					{"caption": "-"}, //separator

					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_compact_output", "default": false},
						"caption": "Remove Indents",
						"mnemonic": "I",
						"id": "compact_output",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args":
						{
							"setting": "ksp_compiled_code_tab_size",
							"default": 2
						},
						"caption": "Indent Size in Compiled Code",
						"mnemonic": "z",
						"id": "indent_size"
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_compact_variables", "default": false},
						"caption": "Compact Variables",
						"mnemonic": "V",
						"id": "compact_variables",
						"checkbox": true
					},
					{"caption": "-"}, //separator
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_extra_checks", "default": true},
						"caption": "Extra Syntax Checks",
						"mnemonic": "E",
						"id": "extra_syntax_checks",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_optimize_code", "default": false},
						"caption": "Optimize Compiled Code",
						"mnemonic": "o",
						"id": "optimize_compiled",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_additional_branch_optimization", "default": false},
						"caption": "Additional Branch Optimization",
						"mnemonic": "B",
						"id": "additional_branch_optimization",
						"checkbox": true
					},
					{"caption": "-"}, //separator
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_add_compiled_date", "default": true},
						"caption": "Add Compilation Date/Time Comment",
						"mnemonic": "T",
						"id": "add_compiled_date_comment",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_combine_callbacks", "default": false},
						"caption": "Combine Duplicate Callbacks",
						"mnemonic": "b",
						"id": "combine_callbacks",
						"checkbox": true
					},
					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_sanitize_exit_command", "default": true},
						"caption": "Sanitize Behavior of 'exit' Command",
						"mnemonic": "x",
						"id": "sanitize_exit_command",
						"checkbox": true
					},

					{"caption":"-"}, //separator

					{
						"command": "ksp_global_setting_toggle",
						"args": {"setting": "ksp_add_completions_for_vanilla_builtins", "default": false},
						"caption": "Enable Completions for Vanilla KSP Built-ins (Reopen Sublime Text!)",
						"mnemonic": "V",
						"id": "add_completions_for_vanilla_builtins",
						"checkbox": true
					},

					{"caption":"-"}, //separator

					{
						"command": "ksp_docs",
						"caption": "SublimeKSP Documentation...",
						"mnemonic": "D",
						"id": "documentation"
					},

					{
						"command": "ksp_about",
						"caption": "About SublimeKSP...",
						"mnemonic": "A",
						"id": "about"
					}
				]
			}
		]
	}
]
